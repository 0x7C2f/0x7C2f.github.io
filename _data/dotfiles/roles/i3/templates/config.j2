#------------------------------#
#-------Bar Settings-----------#
#------------------------------#
bar {
	mode invisible
	hidden_state hide
	modifier none
	strip_workspace_numbers yes
}

#------------------------------#
#----Window Settings----#
#------------------------------#
for_window [class="^.*"] border pixel 0
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [title="Preferences$"] floating enablet
for_window [class="Spotify"] move container to workspace $ws10

#------------------------------#
#-------Font Settings----------#
#------------------------------#
font pango:monospace 8
#------------------------------#
#-------Gap Settings-----------#
#------------------------------#
gaps outer 1
gaps inner 1

#------------------------------#
#---Startup Executions--#
#------------------------------#
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec --no-startup-id /usr/lib/kdeconnectd
exec_always --no-startup-id dunst
exec --no-startup-id picom -b
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
exec --no-startup-id feh --bg-scale ~/.config/background.jpg
exec --no-startup-id betterlockscreen -w dim
exec --no-startup-id /opt/piavpn/bin/pia-client


#------------------------------#
#-------Key Bindings-----------#
#------------------------------#
set $mod Mod4
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym $mod+Return exec alacritty
bindsym $mod+Shift+q kill
bindsym $mod+d exec --no-startup-id rofi -show drun
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+l exec betterlockscreen -l dim
bindsym $mod+f fullscreen toggle
bindsym $mod+x [urgent=latest] focus
bindsym $mod+Shift+p exec scrot ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.jpeg

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "Spotify"


bindsym $mod+Shift+space floating toggle
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

